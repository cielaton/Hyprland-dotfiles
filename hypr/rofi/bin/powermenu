DIR="$HOME/.config/hypr"
rofi_command="rofi -theme $DIR/rofi/themes/powermenu.rasi"
uptime=$(uptime -p | sed -e 's/up //g')

# Options
shutdown=""
reboot=""
powersaving=""
screenoff=""
logout=""

# Get user confirmation
get_confirmation() {
	rofi -dmenu -i \
		-no-fixed-num-lines \
		-p "Are You Sure? : " \
		-theme "$DIR"/rofi/themes/confirm.rasi
}

# Show message
show_msg() {
	rofi -theme "$DIR"/rofi/themes/askpass.rasi -e "Options  -  yes / y / no / n"
}

# Variable passed to rofi
options="$shutdown\n$reboot\n$powersaving\n$screenoff\n$logout"

chosen="$(echo -e "$options" | $rofi_command -p "UP - $uptime" -dmenu -selected-row 2)"
case $chosen in
"$shutdown")
	ans=$(get_confirmation &)
	if [[ $ans == "yes" ]] || [[ $ans == "YES" ]] || [[ $ans == "y" ]]; then
		systemctl poweroff
	elif [[ $ans == "no" ]] || [[ $ans == "NO" ]] || [[ $ans == "n" ]]; then
		exit
	else
		show_msg
	fi
	;;
"$reboot")
	ans=$(get_confirmation &)
	if [[ $ans == "yes" ]] || [[ $ans == "YES" ]] || [[ $ans == "y" ]]; then
		systemctl reboot
	elif [[ $ans == "no" ]] || [[ $ans == "NO" ]] || [[ $ans == "n" ]]; then
		exit
	else
		show_msg
	fi
	;;
"$powersaving")
	ans=$(get_confirmation &)
	if [[ $ans == "yes" || $ans == "YES" || $ans == "y" ]]; then
		source /home/kiet/.config/hypr/rofi/bin/lockscreen
		systemctl suspend
	elif [[ $ans == "no" || $ans == "NO" || $ans == "n" ]]; then
		exit
	else
		show_msg
	fi
	;;
"$screenoff")
	ans=$(get_confirmation &)
	if [[ $ans == "yes" ]] || [[ $ans == "YES" ]] || [[ $ans == "y" ]]; then
		source /home/kiet/.config/hypr/rofi/bin/lockscreen
		hyprctl dispatch dpms off
	elif [[ $ans == "no" ]] || [[ $ans == "NO" ]] || [[ $ans == "n" ]]; then
		exit
	else
		show_msg
	fi
	;;
"$logout")
	ans=$(get_confirmation &)
	if [[ $ans == "yes" ]] || [[ $ans == "YES" ]] || [[ $ans == "y" ]]; then
		kill -9 -1
	elif [[ $ans == "no" ]] || [[ $ans == "NO" ]] || [[ $ans == "n" ]]; then
		exit
	else
		show_msg
	fi
	;;
esac
